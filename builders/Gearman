################################################################################
# Base image
################################################################################

FROM debian

################################################################################
# Build instructions
################################################################################

# Update
RUN apt-get update && apt-get install -my \
  curl \
  vim \
  supervisor \
  gearman-job-server \
  gearman-tools

# Add configuration files
COPY ./conf/gearman/supervisord.conf /etc/supervisor/conf.d/

################################################################################
# Ports
################################################################################

EXPOSE 4730

################################################################################
# Entrypoint
################################################################################

ENTRYPOINT ["/usr/bin/supervisord"]
